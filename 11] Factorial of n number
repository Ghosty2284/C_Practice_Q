#include <stdio.h>

int factorial(int n){
    
    if(n==0 || n==1){
        return 1; // 0!=1 and 1! = 1
    }
    else {
        return n*factorial(n-1);}
    }
    int main(){
        
        int p,result;
        
        printf("Enter number :\n");
        scanf("%d",&p);
        result = factorial(p);
        printf("Factorial of %d is %d",p,result);
    }
