#include <stdio.h>
#include <math.h>

int main() {
    int n, original, digit, sum = 0, count = 0;

    printf("Enter a number: ");
    scanf("%d", &n);

    original = n;

    // Count the number of digits
    int temp = n;
    while (temp != 0) {
        temp /= 10;
        count++;
    }

    temp = n;
    while (temp != 0) {
        digit = temp % 10; // to extract individual digit 
        sum += pow(digit, count); // armstrong number ( 153 = 1^3+5^3+3^3  where power = total number of digits of the number.
        temp /= 10; // to chop away the above digit and to ready for extracting next place digit
    }

    if (sum == original)
        printf("%d is an Armstrong number.\n", original);
    else
        printf("%d is not an Armstrong number.\n", original);

    return 0;
}
