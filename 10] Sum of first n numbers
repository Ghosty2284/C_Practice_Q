#include <stdio.h>

int sum(int n){
    
    if(n==0){
        return 0;
    }
    else {
        return n + sum(n-1);}
    }
    int main(){
        
        int p,result;
        
        printf("Enter number :\n");
        scanf("%d",&p);
        result = sum(p);
        printf("Sum is %d",result);
    }
